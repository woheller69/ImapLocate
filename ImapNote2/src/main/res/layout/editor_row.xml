<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/EditorMenuBgColor"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/row_icon_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:scaleType="center"
        android:contentDescription="@string/undo"
        android:src="@drawable/undo" />

    <com.Pau.ImapNotes2.Miscs.NDSpinner
        android:id="@+id/row_spinner_dummy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/EditorMenuBgColor"
        android:contentDescription="@string/bg_color"
        android:title="@string/bg_color"
        android:visibility="invisible" />
</LinearLayout>